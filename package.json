{
  "name": "cmu-ediss-bookstore",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/sirtobsi/cmu-ediss-bookstore.git",
  "author": "Tobias Schamel <tobias.schamel@tum.de>",
  "license": "MIT",
  "scripts": {
    "prepare": "cd .. && husky install",
    "lint": "eslint .",
    "dev": "yarn api:gen && nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "dev:bookservice": "yarn api:gen && nodemon --exec ts-node -r BookService/tsconfig-paths/register BookService/src/server.ts",
    "dev:customerservice": "yarn api:gen && nodemon --exec ts-node -r CustomerService/tsconfig-paths/register CustomerService/src/server.ts",
    "dev:webbff": "yarn api:gen && nodemon --exec ts-node -r WebBFF/tsconfig-paths/register src/server.ts",
    "dev:mobilebff": "yarn api:gen && nodemon --exec ts-node -r MobileBFF/tsconfig-paths/register MobileBFF/src/server.ts",
    "build:bookservice": "yarn api:gen && prisma generate && run-s clean:bookservice compile:bookservice postBuild:bookservice",
    "build:customerservice": "yarn api:gen && prisma generate && run-s clean:customerservice compile:customerservice postBuild:customerservice",
    "build:webbff": "yarn api:gen && prisma generate && run-s clean:webbff compile:webbff postBuild:webbff",
    "build:mobilebff": "yarn api:gen && prisma generate && run-s clean:mobilebff compile:mobilebff postBuild:mobilebff",
    "build": "yarn api:gen && prisma generate && run-s clean compile postBuild",
    "postBuild:bookservice": "ncp node_modules BookService/dist/node_modules",
    "postBuild:customerservice": "ncp node_modules CustomerService/dist/node_modules",
    "postBuild:webbff": "ncp node_modules WebBFF/dist/node_modules",
    "postBuild:mobilebff": "ncp node_modules MobileBFF/dist/node_modules",
    "postBuild": "ncp node_modules dist/node_modules",
    "start": "yarn run build && node -r tsconfig-paths/register dist/src/server.js",
    "clean:bookservice": "rimraf BookService/dist",
    "clean:customerservice": "rimraf CustomerService/dist",
    "clean:webbff": "rimraf WebBFF/dist",
    "clean:mobilebff": "rimraf MobileBFF/dist",
    "clean": "rimraf dist",
    "compile:bookservice": "tsc -p BookService/tsconfig.json && tsc-alias -p BookService/tsconfig.json",
    "compile:customerservice": "tsc -p CustomerService/tsconfig.json && tsc-alias -p CustomerService/tsconfig.json",
    "compile:webbff": "tsc -p WebBFF/tsconfig.json && tsc-alias -p WebBFF/tsconfig.json",
    "compile:mobilebff": "tsc -p MobileBFF/tsconfig.json && tsc-alias -p MobileBFF/tsconfig.json",
    "compile": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "api:gen": "rimraf ./api/generated && openapi --input ./api/src/api.yaml --output ./api/generated"
  },
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-http-proxy": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "prisma": "^5.11.0",
    "swagger-ui-express": "^4.6.3",
    "ts-dotenv": "^0.9.1",
    "tsc-alias": "^1.8.7",
    "winston": "^3.9.0",
    "yamljs": "^0.3.0",
    "yarn": "^1.22.19",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-http-proxy": "^1.6.6",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.0.11",
    "jest": "^29.0.0",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "openapi-typescript-codegen": "^0.24.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ]
  }
}
